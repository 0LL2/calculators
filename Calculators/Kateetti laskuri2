using System;
namespace pythagora_laskuri
{
    class Program
    {
        static double lasku(double x)
        {
            double y = Convert.ToDouble(Math.Sqrt(x));
            return y;
        }

        static void Main()
        {
            Console.Write("Tunnettu kateetti: ");


            double Sivu1 = Convert.ToDouble(Console.ReadLine());


            Console.Write("Hypotenuusa: ");


            double Sivu2 = Convert.ToDouble(Console.ReadLine());


            double x=((Sivu2*Sivu2)-(Sivu1*Sivu1));

            double z = lasku(x);


            Console.WriteLine("Laskettava kateetti: " +z);
            //{ 0:0.00}
            Console.ReadLine();
        }
    }
}
