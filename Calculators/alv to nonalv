using System;
namespace Testi1
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.Write("Verollinen hinta: ");
            int Verollinen = Convert.ToInt32(Console.ReadLine());

            Console.Write("Veron määrä(10/14/24): ");
            double Input = Convert.ToDouble(Console.ReadLine());

            Console.WriteLine("Veroton hinta: " + (Verollinen-(Verollinen*(Input / (100 + Input)))));
            Console.ReadLine();
        }
    }
}
